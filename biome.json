{
	"$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
	"root": true,
	"files": {
		"ignoreUnknown": false,
		"includes": [
			"**",
			"!**/node_modules/**",
			"!**/dist/**",
			"!**/build/**",
			"!**/.tanstack/**",
			"!apps/frontend/src/routeTree.gen.ts",
			"!apps/frontend/src/styles.css"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"assist": {
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
